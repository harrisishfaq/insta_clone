<%= turbo_frame_tag :modal do %>
    <div style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background-color: #fff; border: 1px solid #000; padding: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); z-index: 999;">
    <%= link_to 'Back' , :back %>
    <h1>New Friend Requests</h1>
    <% @requests.each do |req| %>
      <span style="display: inline-block;">
         <%= req[2] %>
       </span>
       <span style="display: inline-block;">
         <%= button_to 'Approve' , approve_request_friend_path(req[0]), method: :post %>
       </span>
       <span style="display: inline-block;">
         or
       </span>
       <span style="display: inline-block;">
         <%= button_to 'Reject' , reject_request_friend_path(req[0]), method: :post %>
       </span>
       <br>
     <% end %> 
    </div>
  
  <% end %>
  
  