<%= turbo_frame_tag :modal do %>

    <div style="position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background-color: #fff; border: 1px solid #000; padding: 20px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); z-index: 999;">
    <%= link_to 'Back' , :back %>
    <h1>Friends Management</h1>
    <% @user_friends.each do |usr| %>
      <span style="display: inline-block;">
       </span>
      <span style="display: inline-block;">

         <% if usr[:email] == current_user.email %>
            <%= friend_email(usr[:friend_id]) %>
          <% else %>
         <%= usr[:email] %>
          <% end %>
       </span>
       <span style="display: inline-block;">
         <%= button_to 'Unfriend' , block_or_unfriend_friend_path(id: usr[:friend_tbl_id], action_performable: Friend::UNFRIEND)  %>
       </span>
       <span style="display: inline-block;">
         or
       </span>
       <span style="display: inline-block;">
         <%= button_to 'Block' ,  block_or_unfriend_friend_path(id: usr[:friend_tbl_id], action_performable: Friend::BLOCK) %>
       </span>
       <br>
     <% end %> 
    </div>
<% end %>